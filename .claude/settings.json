{
  "permissions": {
    "allow": [
      "Write",
      "Edit",
      "Bash"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh project delete:*)",
      "Bash(gh release delete:*)",
      "Bash(gh secret:*)",
      "Bash(gh auth token:*)",
      "Bash(git clean:*)",
      "Bash(git reset --hard:*)",
      "Bash(git branch -D:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -r:*)"
    ],
    "ask": [
      "Bash(git stash drop:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git push origin --delete:*)",
      "Bash(git branch -d:*)",
      "Bash(git tag -d:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "memory"
  ]
}
